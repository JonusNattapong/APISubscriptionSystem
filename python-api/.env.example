# API configuration
DEBUG=False
HOST=0.0.0.0
PORT=8000

# Security
SECRET_KEY=your-secret-key-for-jwt-must-be-very-secure
ACCESS_TOKEN_EXPIRE_MINUTES=10080  # 7 days in minutes

# Database
DATABASE_URL=sqlite:///./ai_subscription.db
# For PostgreSQL: DATABASE_URL=postgresql://user:password@localhost/ai_subscription

# Stripe - Payment processing
STRIPE_API_KEY=your-stripe-api-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Google Cloud Storage
GCS_BUCKET_NAME=your-gcs-bucket-name
GCS_CREDENTIALS_FILE=path/to/credentials.json

# AI model settings
MODEL_DIR=./models

# CORS Origins
CORS_ORIGINS=http://localhost,http://localhost:3000,http://localhost:8000,https://yourdomain.com
